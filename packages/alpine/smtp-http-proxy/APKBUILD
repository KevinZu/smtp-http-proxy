# Contributor: Remko Tronçon <remko@el-tramo.be>
# Maintainer: Remko Tronçon <remko@el-tramo.be>
pkgname=smtp-http-proxy
pkgver=0.5
pkgrel=0
pkgdesc="Simple SMTP to HTTP proxy"
url="https://el-tramo.be/smtp-http-proxy"
arch="all"
license="BSD"
depends="curl boost boost-program_options boost-system"
makedepends="scons curl-dev boost-dev"
install=""
subpackages=""
source="${pkgname}-${pkgver}.tar.gz::https://github.com/remko/smtp-http-proxy/archive/v$pkgver.tar.gz"

_builddir="$srcdir"/smtp-http-proxy-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	scons || return 1
}

package() {
	cd "$_builddir"
	scons / || return 1
	mkdir -p "$pkgdir/usr/bin"
	cp smtp-http-proxy "$pkgdir/usr/bin" || return 1
}
md5sums="3555136bcc592f6abaf761cb8c382a61  ${pkgname}-${pkgver}.tar.gz"
sha256sums="fc2a581ecf91bc173e38e0839f2e6a9ee4a54f18738ae4b3edf811fc0596f75a  ${pkgname}-${pkgver}.tar.gz"
sha512sums="4ac34c621bd24801d3c2055599e0348b698382e229902e9e608ea07970e67cb1bebe705e42aac8e782c3abe84c3425b28e218d589471767fb5223de14592afe3  ${pkgname}-${pkgver}.tar.gz"
