# Contributor: Remko Tronçon <remko@el-tramo.be>
# Maintainer: Remko Tronçon <remko@el-tramo.be>
pkgname=smtp-http-proxy
pkgver=0.2
pkgrel=0
pkgdesc="Simple SMTP to HTTP proxy"
url="https://el-tramo.be/smtp-http-proxy"
arch="all"
license="BSD"
depends="curl boost boost-program_options boost-system"
makedepends="scons curl-dev boost-dev"
install=""
subpackages=""
source="${pkgname}-${pkgver}.tar.gz::https://github.com/remko/smtp-http-proxy/archive/v$pkgver.tar.gz"

_builddir="$srcdir"/smtp-http-proxy-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	scons || return 1
}

package() {
	cd "$_builddir"
	scons / || return 1
	mkdir -p "$pkgdir/usr/bin"
	cp smtp-http-proxy "$pkgdir/usr/bin" || return 1
}
md5sums="175f17adccff68e2db35d70c526d5623  ${pkgname}-${pkgver}.tar.gz"
sha256sums="5c2f4f05af06c7c779d9906271f737fe276d383451550b407043df6749374ed7  ${pkgname}-${pkgver}.tar.gz"
sha512sums="b5bf07873093073b906d42fe2060edbd48cc1c76ea9a59c698778720f4871cd0745b85b72ea3514921429883173400823f197d727e744c69167ca04f4553d90b  ${pkgname}-${pkgver}.tar.gz"
