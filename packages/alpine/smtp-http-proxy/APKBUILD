# Contributor: Remko Tronçon <remko@el-tramo.be>
# Maintainer: Remko Tronçon <remko@el-tramo.be>
pkgname=smtp-http-proxy
pkgver=0.3
pkgrel=0
pkgdesc="Simple SMTP to HTTP proxy"
url="https://el-tramo.be/smtp-http-proxy"
arch="all"
license="BSD"
depends="curl boost boost-program_options boost-system"
makedepends="scons curl-dev boost-dev"
install=""
subpackages=""
source="${pkgname}-${pkgver}.tar.gz::https://github.com/remko/smtp-http-proxy/archive/v$pkgver.tar.gz"

_builddir="$srcdir"/smtp-http-proxy-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	scons || return 1
}

package() {
	cd "$_builddir"
	scons / || return 1
	mkdir -p "$pkgdir/usr/bin"
	cp smtp-http-proxy "$pkgdir/usr/bin" || return 1
}
md5sums="891052667accdbad211250662e1d7288  ${pkgname}-${pkgver}.tar.gz"
sha256sums="abef80bb706c09824dba6b2556f2fa310e276f97791b7b9565ca91f805b91536  ${pkgname}-${pkgver}.tar.gz"
sha512sums="bfdb22eedc56630ec736d4de9a601c801fba94dc286c4b328841fa8c2c705b4dae78601d378f44e10ff90bc6ab1e34fee0b3807f62ab7bf2a3944e3bf976b598  ${pkgname}-${pkgver}.tar.gz"
